{
    // Terminal
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "Anonymice Nerd Font Mono",
    // View
    "window.zoomLevel": 1,
    "window.commandCenter": false,
    "editor.fontSize": 14,
    "editor.rulers": [80, 120],
    "editor.wordWrapColumn": 240,
    "editor.wordWrap": "wordWrapColumn",
    "workbench.colorTheme": "Relaxed",
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#2A4F67"
    },
    "workbench.sideBar.location": "right",
    // Formatting
    "editor.minimap.enabled": false,
    "files.autoSave": "onFocusChange",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": false,
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "prettier.singleQuote": true,
    "prettier.tabWidth": 4,
    "prettier.semi": false,
    "prettier.bracketSpacing": true,
    "prettier.printWidth": 240,
    "auto-rename-tag.activationOnLanguage": ["*"],
    "javascript.updateImportsOnFileMove.enabled": "always",
    // Behavior
    "git.autofetch": true,
    "git.mergeEditor": true,
    "editor.suggestSelection": "first",
    "editor.inlineSuggest.enabled": true,
    "editor.renderWhitespace": "all",
    // Files
    "files.associations": {
        "*.cmake": "c",
        "*.adoc": "asciidoc"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "redhat.telemetry.enabled": false,
    // Spelling // Docs
    "cSpell.userWords": [
        ".adoc",
        "adoc",
        "antora",
        "gitlab",
        "headlessui",
        "lelopez",
        "loggedin",
        "react",
        "Storyshots",
        "wagmo",
        "webclient"
    ],

    // Language Specific
    "[markdown]": {
        "editor.wordWrap": "bounded"
    },
    "[lua]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua"
    },
    "[yaml]": {
        "editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": true
    },
    "[terraform]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.tabSize": 2 // optionally
    },
    "[terraform-vars]": {
        "editor.tabSize": 2 // optionally
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "[dart]": {
        "editor.defaultFormatter": "Dart-Code.dart-code",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.sortImports": "explicit"
        }
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },
    "[helm]": {
        "editor.defaultFormatter": "kennylong.kubernetes-yaml-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": true
    },
    "[ansible]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.detectIndentation": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
            "comments": true,
            "other": true,
            "strings": true
        },
        "editor.autoIndent": "advanced"
    }
    // End
}
